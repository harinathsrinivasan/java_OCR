<configuration>
    <property name="LOGS" value="./logs"/>
    <!--  Declare an appender of ConsoleAppender type  -->
    <appender name="Console"
              class="ch.qos.logback.core.ConsoleAppender">
        <!-- Specify layout to be of PatternLayout type -->
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                <!--
                %d - time and date of the log,
                level - log level,
                %t - thread that generated the log event,
                %C{1} - class name of the caller,
                %m - log message,
                %n - new line
                throwable - stack trace of the log event
                -->
                %white(%d{ISO8601}) %highlight(%-5level) [%blue(%t)] %magenta(%C{1}): %msg%n%throwable
            </Pattern>
        </layout>
    </appender>
    <appender name="RollingFile"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOGS}/spring-boot-logger.log</file>
        <encoder
                class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <!--
            %d - time and date of the log,
            %p - log level,
            %C{1} - class name of the caller,
            [%t] - thread that generated the log event,
            %msg - log message,
            %n - new line
            -->
            <Pattern>%d %p %C{1} [%t] %msg%n</Pattern>
        </encoder>
        <rollingPolicy
                class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!--  Daily rollover, date format can be omitted, %i - when creating multiple files add index  -->
            <fileNamePattern>${LOGS}/archived/spring-boot-logger-%d.%i.log</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy
                    class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>5MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
    </appender>
    <!--  The <root> element configures the root logger. Everything will be logged at the INFO level  -->
    <root level="info">
        <appender-ref ref="RollingFile"/>
        <appender-ref ref="Console"/>
    </root>
</configuration>